<div class='form new'>
<h3>New Task</h3>
    <form class='newTaskForm'>
      <fieldset>
        <label for='taskTitle'>
          <input type='text' name='taskTitle' class='taskTitle'autofocus='true' />
          Title
        </label>
        <br>
        <label for='taskDescription'>
          <textarea class='taskDescription'></textarea>
          Description
        </label>
        <br>
        <label for='taskDueDate'>
          <input type='date' name='taskDueDate' class='taskDueDate' />
          Due Date
        </label>
        <br>
        <label for='taskCompleted'>
          <input type='checkbox' name='taskCompleted' class='taskCompleted' />
          Completed?
        </label>
        <br>
        <label for='taskPriority'>
        <select class='taskPriority'>
          <option value="1">Urgent</option>
          <option value="2">High</option>
          <option value="3">Medium</option>
          <option value="4">Low</option>
        </select>
          Priority
        </label>
      </fieldset>

    <button type='submit'>Submit</button>
  </form>
</div>
